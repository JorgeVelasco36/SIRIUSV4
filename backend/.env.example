# Database Configuration
# SQLite (no requiere instalación) - Ya configurado por defecto
DATABASE_URL=sqlite:///./sirius_v4.db

# Si prefieres usar PostgreSQL, descomenta y configura:
# DATABASE_URL=postgresql://usuario:password@localhost:5432/sirius_v4

# Microsoft Graph API (SharePoint)
# Obtén estas credenciales en: https://portal.azure.com
# Si no tienes acceso a SharePoint, puedes dejar estos valores vacíos
AZURE_CLIENT_ID=tu_azure_client_id
AZURE_CLIENT_SECRET=tu_azure_client_secret
AZURE_TENANT_ID=tu_azure_tenant_id
SHAREPOINT_SITE_ID=tu_sharepoint_site_id
SHAREPOINT_DRIVE_ID=tu_sharepoint_drive_id

# LLM Configuration (OpenAI)
# Obtén tu clave en: https://platform.openai.com/api-keys
# IMPORTANTE: Esta clave es obligatoria para que el asistente funcione
OPENAI_API_KEY=tu_openai_api_key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3

# Application
# Genera cualquier texto aleatorio para SECRET_KEY
SECRET_KEY=genera-una-clave-secreta-segura-aqui
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

